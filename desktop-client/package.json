{
  "name": "voicevault-desktop",
  "version": "1.0.0",
  "description": "VoiceVault Electron desktop application",
  "main": "public/electron.js",
  "private": true,
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "@mui/material": "^6.2.0",
    "@mui/icons-material": "^6.2.0",
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "axios": "^1.7.9",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "typescript": "^5.7.2",
    "react-scripts": "5.0.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.1",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "concurrently \"pnpm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:pack": "electron-builder",
    "electron:build": "pnpm run build && electron-builder",
    "electron:build:win": "pnpm run build && electron-builder --win",
    "electron:build:mac": "pnpm run build && electron-builder --mac",
    "electron:build:linux": "pnpm run build && electron-builder --linux",
    "dev": "concurrently \"pnpm start\" \"wait-on http://localhost:3000 && electron .\"",
    "clean": "rimraf build dist"
  },
  "build": {
    "appId": "com.voicevault.desktop",
    "productName": "VoiceVault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}