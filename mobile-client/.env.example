# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3001

# ElevenLabs Configuration
EXPO_PUBLIC_ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Feature Flags
EXPO_PUBLIC_ENABLE_VOICE_CLONING=true
EXPO_PUBLIC_ENABLE_EMOTION_ANALYSIS=true
EXPO_PUBLIC_ENABLE_LOCATION_TRACKING=true
EXPO_PUBLIC_ENABLE_SPEECH_TO_SPEECH=true

# Audio Configuration
EXPO_PUBLIC_MAX_RECORDING_DURATION=300
EXPO_PUBLIC_AUDIO_SAMPLE_RATE=44100
EXPO_PUBLIC_AUDIO_CHANNELS=1
EXPO_PUBLIC_AUDIO_FORMAT=wav

# Location Configuration
EXPO_PUBLIC_LOCATION_ACCURACY=high
EXPO_PUBLIC_LOCATION_TIMEOUT=10000

# Storage Configuration
EXPO_PUBLIC_MAX_LOCAL_STORAGE=1000MB
EXPO_PUBLIC_AUTO_BACKUP=true

# Development Configuration
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Push Notifications (optional)
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=false