{
  "name": "voicevault",
  "version": "1.0.0",
  "description": "Advanced voice recognition and management system with emotion detection",
  "author": "Dustin Pennington",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/voicevault.git"
  },
  "scripts": {
    "start": "node dist/server/src/index.js",
    "dev": "concurrently --kill-others \"powershell -Command cd server; pnpm run dev\" \"powershell -Command cd client; pnpm run dev\"",
    "dev:server": "cd server && pnpm run dev",
    "dev:client": "cd client && pnpm run dev",
    "build": "pnpm run build:server && pnpm run build:client",
    "build:server": "cd server && pnpm run build",
    "build:client": "cd client && pnpm run build",
    "test": "pnpm run test:server && pnpm run test:client",
    "test:server": "cd server && pnpm test",
    "test:client": "cd client && pnpm test",
    "install:all": "pnpm install && cd server && pnpm install && cd ../client && pnpm install",
    "clean": "pnpm run clean:server && pnpm run clean:client",
    "clean:server": "cd server && rm -rf node_modules dist",
    "clean:client": "cd client && rm -rf node_modules build",
    "desktop:setup": "powershell -ExecutionPolicy Bypass -File ./run-desktop-app.ps1",
    "desktop:dev": "powershell -ExecutionPolicy Bypass -File ./run-desktop-app.ps1 -SkipInstall",
    "desktop:build": "powershell -ExecutionPolicy Bypass -File ./run-desktop-app.ps1 -ProductionBuild",
    "desktop:clean": "powershell -ExecutionPolicy Bypass -File ./run-desktop-app.ps1 -CleanInstall",
    "desktop:shortcut": "powershell -ExecutionPolicy Bypass -File ./create-desktop-shortcut.ps1",
    "bit:install": "bit install",
    "bit:build": "bit build",
    "bit:test": "bit test",
    "bit:start": "bit start",
    "bit:status": "bit status",
    "bit:list": "bit list",
    "bit:compile": "bit compile",
    "bit:snap": "bit snap -m",
    "bit:tag": "bit tag -m",
    "bit:export": "bit export",
    "bit:add-components": "bit add src/components/Button --main index.tsx && bit add src/components/Card --main index.tsx"
  },
  "keywords": [
    "voice recognition",
    "emotion detection",
    "voice analysis",
    "speaker identification",
    "audio processing"
  ],
  "contributors": [
    {
      "name": "Dustin Pennington",
      "email": "[Your email]",
      "url": "[Your website/profile]"
    }
  ],
  "copyright": "Copyright Â© 2024 Dustin Pennington. All rights reserved.",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "dependencies": {
    "@chakra-ui/react": "^3.20.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/lab": "^7.0.0-beta.13",
    "@mui/x-tree-view": "^8.5.1",
    "@types/pg": "^8.15.4",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
